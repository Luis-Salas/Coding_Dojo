<optimizer-page name="category" package-path="./optimizer.json"/>

<c-var name="generator" value="data.generator"/>

<layout-use template="../../layouts/default-layout.rhtml" site="${data.site}" output-dir="${data.outputDir}">
    <layout-put into="title">${data.category.title}</layout-put>
    <layout-put into="body">
        <h1>
            Posts Related to ${data.category.title}
        </h1>
        <section class="post" c-for="post in data.posts">
            <h3 class="post-title">
                <a href="${generator.postUrl(post)}">${post.title}</a> <span class="separator">&middot;</span> ${generator.formattedDate(post.date)}
            </h3>
        </section>

    </layout-put>
</layout-use>