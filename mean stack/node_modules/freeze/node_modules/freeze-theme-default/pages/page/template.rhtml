<optimizer-page name="page" package-paths="${data.packagePaths}" cache-key="${data.optimizerCacheKey}" />

<c-var name="page" value="data.page"/>
<c-var name="site" value="data.site"/>
<c-var name="generator" value="data.generator"/>

<layout-use template="../../layouts/default-layout.rhtml" site="${site}" generator="${generator}">
    <layout-put into="title">$page.title | ${site.title}</layout-put>
    <layout-put into="body">
        
        <article class="hentry" role="article">
            
            <h1 class="page-title">$page.title</h1>
            
            <div class="page-body">
                $!{page.bodyHtml}
            </div>
        </article>
        <section c-if="page.comments === true">
            <h1>Comments</h1>
            <div id="disqus_thread"></div>
            <disqus-comments disqus-shortname="${site.disqusShortname}"
                page-id="${page.name}"
                page-title="${page.title}" />
        </section>

    </layout-put>
</layout-use>